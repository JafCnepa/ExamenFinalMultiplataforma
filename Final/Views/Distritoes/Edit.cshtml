@model Final.Models.Distrito

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Distrito</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="codigo_distrito" />
            <div class="form-group">
                <label asp-for="nombre_distrito" class="control-label"></label>
                <input asp-for="nombre_distrito" class="form-control" />
                <span asp-validation-for="nombre_distrito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a listar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
